{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"type": "shell",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": false,
				"showReuseMessage": false,
				"revealProblems": "onProblem",
				"echo": false,
				"clear": true,
				"group": "runners"
			},
			"runOptions": {"instanceLimit": 1},
			"promptOnClose": true,
			"detail": "runs the web application",
			"windows": {
				"command": "${workspaceFolder}/.venv/Scripts/activate", 
				"args": [
					"&&",
					"python","manage.py","runserver"
				]
			},
			"command": "source",
			"args": [
				".venv/bin/activate","&&",
				"make","beauty_start","&&",
				"python","manage.py","runserver","&&",
				"make","beauty_end",
			]
		},
		{
			"label": "Migrate",
			"type": "shell",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"focus": false,
				"showReuseMessage": false,
				"revealProblems": "onProblem",
				"echo": false,
				"clear": true,
				"group": "migrationers"
			},
			"runOptions": {"instanceLimit": 1},
			"promptOnClose": true,
			"detail": "Makes Migrations then Migrates",
			"windows": {
				"command": "${workspaceFolder}/.venv/Scripts/activate", 
				"args": [
					"&&",
					"python","manage.py","makemigrations","&&",
					"python","manage.py","migrate"
				]
			},
			"command": "source",
			"args": [
				".venv/bin/activate","&&",
				"python","manage.py","makemigrations","&&",
				"python","manage.py","migrate"
			]
		},
		{
			"label": "Setup",
			"type": "shell",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"showReuseMessage": false,
				"revealProblems": "onProblem",
				"echo": false,
				"clear": true,
				"group": "setuppers"
			},
			"runOptions": {"instanceLimit": 1},
			"promptOnClose": true,
			"detail": "makes the python virtual enviroment and intsalls the modules",
			"windows": {
				"command": "virtualenv",
				"args": [
					".venv",";",
					".venv\\bin\\activate",";",
					"make","import",";",
					"deactivate"
				]
			},
			"command": "python3",
			"args": [
				"-m","venv",".venv","&&",
				"source",".venv/bin/activate","&&",
				"make","import","&&",
				"deactivate"
			]
		}
	]
}
